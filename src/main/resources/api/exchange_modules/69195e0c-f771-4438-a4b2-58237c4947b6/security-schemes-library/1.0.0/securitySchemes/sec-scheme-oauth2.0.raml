#%RAML 1.0 SecurityScheme
type: OAuth 2.0
description: OAuth 2.0 Client Credentials Security for Experience API
describedBy:
  headers:
    Authorization: 
      type: string
  queryParameters:
    access_token:
      type: string
  responses:
    401:
      description: |
        Bad or expired token
    403:
      description: |
        Bad Oauth request
settings:
  authorizationUri: 
  accessTokenUri: 
  authorizationGrants:
    - client_credentials